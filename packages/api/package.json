{
  "name": "@maintenance/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "PYTHONPATH=$PYTHONPATH:$(pwd) python -m uvicorn src.main:app --reload --host 0.0.0.0 --port 8001",
    "start": "PYTHONPATH=$PYTHONPATH:$(pwd) python -m uvicorn src.main:app --host 0.0.0.0 --port 8001",
    "build": "echo 'No build step for Python API'",
    "lint": "pylint src",
    "test": "pytest",
    "clean": "rm -rf __pycache__ .pytest_cache",
    "setup": "python -m venv .venv && ./.venv/bin/pip install -r requirements.txt"
  }
}
